<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/output.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
    <title>Courses</title>
</head>
<body class="bg-primary text-secondary font-cartoon dotted-bg">
    <header class="bg-primary shadow comic-border fixed w-full z-10">
        <div class="container mx-auto py-6 px-4 flex justify-between items-center">
            <h1 class="text-4xl font-bold text-secondary">
                <a href="/" class="text-secondary">
                    Courses
                </a>
            </h1>
            <div>
                <% if (user) { %>
                    <a href="/profile" class="text-secondary">
                        <img src="/path/to/profile-icon.png" alt="Profile" class="w-8 h-8 rounded-full">
                    </a>
                <% } else { %>
                    <a href="/login" class="text-secondary mr-4">Login</a>
                    <a href="/register" class="text-secondary">Register</a>
                <% } %>
            </div>
        </div>
    </header>
    <main class="container mx-auto py-8 px-4 pt-32">
        <% if (user) { %>
            <div class="mb-4 mt-5">
                <a href="/courses/create" class="bg-accent text-white p-2 rounded">Create Course</a>
            </div>
        <% } %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% courses.forEach(course => { %>
                <div class="bg-primary p-6 rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-300 comic-border group">
                    <h2 class="text-2xl font-bold mb-2 text-black group-hover:text-accent">
                        <a href="/courses/<%= course.id %>" class="text-secondary group-hover:text-accent">
                            <%= course.title %>
                        </a>
                    </h2>
                    <p class="text-secondary"><%= course.description %></p>
                </div>
            <% }) %>
        </div>
    </main>
    <footer class="bg-primary shadow mt-8 comic-border">
        <div class="container mx-auto py-4 px-4 text-center">
            <p class="text-secondary">&copy; 2025 Courses Page. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>